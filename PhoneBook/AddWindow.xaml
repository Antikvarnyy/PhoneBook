<Window x:Class="PhoneBook.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneBook"
        mc:Ignorable="d"
        Title="AddWindow" Height="220" Width="300">
    <Grid Background="#222222">
        <StackPanel>
            <Label Content="Add" Foreground="Coral" FontFamily="Bahnschrift Condensed" HorizontalAlignment="Center" FontSize="28"></Label>
            <Label Content="Enter new contact`s name:" Foreground="Coral" FontFamily="Bahnschrift Condensed" HorizontalAlignment="Left" FontSize="13"></Label>
            <Border Margin="5,0,5,0" Background="White" CornerRadius="10" Width="240">
                <TextBox  Width="220" x:Name="NameBox" BorderBrush="White"></TextBox>                
            </Border>
            <Label Content="Enter new contact`s number:" Foreground="Coral" FontFamily="Bahnschrift Condensed" HorizontalAlignment="Left" FontSize="13"></Label>
            <Border Margin="5,0,5,0" Background="White" CornerRadius="10" Width="240">
                <TextBox  Width="220" x:Name="NumBox" BorderBrush="White"></TextBox>
            </Border>
            <StackPanel Margin="0,10,0,10" Orientation="Horizontal">
                <Button x:Name="AddButton2" Margin="15,0,0,0" FontFamily="Bahnschrift Condensed" Content="Add"  Height="25" Width="100" Click="AddContactClick"></Button>
                <Button x:Name="ExitButton" Margin="20,0,0,0" FontFamily="Bahnschrift Condensed" Content="Cancel"  Height="25" Width="100" Click="CloseButtonClick"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
